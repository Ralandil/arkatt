    #list promptlines set {15} {$promptlines[15]};
    #list promptlines set {16} {$promptlines[16]};
    #nop list promptlines set {17} {$promptlines[17]};
  };
  #else {
    #var staticframe {${staticframe}${bgcolor}-};
    #list promptlines set {1} {$promptlines[1] };
    #list promptlines set {2} {$promptlines[2] };
    #list promptlines set {3} {$promptlines[3] };
    #list promptlines set {4} {$promptlines[4] };
    #list promptlines set {5} {$promptlines[5] };
    #list promptlines set {6} {$promptlines[6] };
