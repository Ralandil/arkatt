  };
  #elseif {$iii == $maxwidth}  {
    #var staticframe {${staticframe}${bgcolor}+};
    #list promptlines set {1} {$promptlines[1]};
    #list promptlines set {2} {$promptlines[2]};
    #list promptlines set {3} {$promptlines[3]};
