#event {MAP ENTER ROOM} {
	#var vnum %0;

	#map get {roomexits} {ex};
	#map get {roomdesc} {gmcp};

	#echo {{%+1s} {1}} {<ECA><aaa>  $vnum  <088> <BDB><aaa>   $gmcp  <088> $mode};


	#if {$visit[$vnum] > 0} {
		#math {vi} {$visit[$vnum]+1};
	} {
		#var {vi} {1};
	}
	#var {visit[$vnum]} {$vi};
};

#event {SEND OUTPUT} {
	#var last_send {%0};
	#sh {<ead>%0<088>}
}

#function inform {
	#sh %1;
	#return;
}